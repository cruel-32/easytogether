{
  "compilerOptions": {
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "typeRoots" : [
      "./node_modules/@types",
      "./src/typings",
      "./src/typings/model",
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
